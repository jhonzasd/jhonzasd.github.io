---
import GitHub from "./icons/GitHub.astro";
import UnityIcon from "./icons/Unity.astro";
import CSharpIcon from "./icons/CSharp.astro";
import LinkButton from "./LinkButton.astro";
import GodotIcon from "./icons/Godot.astro";
import HTMLIcon from "./icons/HTML.astro";
import JavaScriptIcon from "./icons/JavaScript.astro";
import CSSIcon from "./icons/CSS.astro";
import PythonIcon from "./icons/Python.astro";

const TAGS = {
  UNITY: {
    name: "Unity",
    class: "bg-[#111B21] text-white",
    icon: UnityIcon,
  },
  CSHARP: {
    name: "C Sharp",
    class: "bg-[#3e1d3b] text-white",
    icon: CSharpIcon,
  },
  GODOT: {
    name: "Godot",
    class: "bg-[#A2E1FF] text-white",
    icon: GodotIcon,
  },
  HTML: {
    name: "HTML",
    class: "bg-[#EE957C] text-white",
    icon: HTMLIcon,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#A2E1FF] text-white",
    icon: CSSIcon,
  },
  PYTHON: {
    name: "Python",
    class: "bg-[#ffe592] text-white",
    icon: PythonIcon,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-[#ffe592] text-white",
    icon: JavaScriptIcon,
  },
};
const PROJECTS = [
  {
    title: "Project: AXL - Videojuego ganador de las Olimpiadas TECH 2023",
    description:
      "Videojuego 2D roguelike desarrollado durante las Olimpiadas Tech 2023, competencia que busca fortalecer habilidades tecnológicas organizada por Ruta N y la Alcaldía de Medellín. Desarrollado en 6 semanas con Unity.",
    link: "#",
    github: "https://github.com/jhonzasd/project-axl",
    image: "/projects/project-axl.webp",
    tags: [TAGS.UNITY, TAGS.CSHARP],
    secondImage: "/projects/olimpiadas_tech.webp",
  },
  {
    title: "Safari Match",
    description:
      "Videojuego 2D de Match 3 para dispositivos móviles desarrollado en Unity",
    link: "#",
    github: "https://github.com/jhonzasd/safari-match",
    image: "/projects/safari-match.png",
    tags: [TAGS.UNITY, TAGS.CSHARP],
  },
  {
    title: "Monochromy",
    description:
      "Videojuego 2D de plataformas para PC, se encuentra en desarrollo en Godot",
    link: "#",
    github: "https://github.com/jhonzasd/monochromy",
    image: "/projects/monochromy.png",
    tags: [TAGS.GODOT],
  },
  {
    title: "FitLine",
    description:
      "Prototipo de red social de deportes creado durante el Hack Challenge de ExpoIngeniería, el evento más grande de ingeniería de Colombia. Se utilizan lenguajes como HTML, CSS, JavaScript y Python para su desarrollo.",
    link: "#",
    github: "https://github.com/jhonzasd/fitline",
    image: "/projects/fitline.jpg",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT, TAGS.PYTHON],
  },
];
---

<section class="flex flex-col gap-y-16">
  {
    PROJECTS.map(
      ({ image, title, description, tags, link, github, secondImage }) => (
        <article>
          <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
            {title}
          </h3>
          <p class="text-lg mb-4 text-pretty">{description}</p>
          <ul class="flex gap-x-2 flex-row mb-2">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
          <img
            loading="lazy"
            class="rounded shadow-2xl shadow-white/10 aspect-video"
            src={image}
            alt={`Captura de pantalla del proyecto ${image}`}
          />
          <img
            loading="lazy"
            class="rounded shadow-2xl shadow-white/10 aspect-video"
            src={secondImage}
            alt={`Captura de pantalla del proyecto ${secondImage}`}
          />
          <footer class="flex gap-x-4 items-end justify-start mt-4">
            {github && (
              <LinkButton href={github}>
                <GitHub class="size-6" />
                Ver código fuente
              </LinkButton>
            )}
          </footer>
        </article>
      )
    )
  }
</section>
